<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieDb" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MovieDb" parent="Base.Theme.MovieDb">
        <item name="android:windowTranslucentStatus" >true</item>
        <item name="android:statusBarColor" >@android:color/transparent</item>

        <!-- Add other theme attributes as needed -->
    </style>
    <style name="BriefDetailParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
    </style>
    <style name="BriefDetailTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BriefDetailBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="DetailsTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
</resources>